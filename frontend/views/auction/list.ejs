<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= title %> - AuctionHub</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-white font-sans">

    <%- include("../partials/header") %>

    <div class="container mx-auto px-6 py-8">
        <div class="flex justify-between items-center mb-8">
            <h1 class="text-3xl font-bold">Active Auctions</h1>
            <a href="/api/auction/create" class="bg-green-600 px-4 py-2 rounded font-bold hover:bg-green-700">
                + Create Auction
            </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <% auctions.forEach(auction => { %>
                <div class="bg-gray-800 rounded-lg shadow-lg overflow-hidden border border-gray-700">
                    
                    <div class="h-48 bg-white flex items-center justify-center p-2">
                        <img src="/uploads/<%= auction.image %>" 
                             onerror="this.src='https://via.placeholder.com/300?text=No+Image'"
                             class="max-h-full max-w-full object-contain">
                    </div>

                    <div class="p-4">
                        <h3 class="text-xl font-bold mb-1"><%= auction.title %></h3>
                        <p class="text-green-500 font-bold mb-4">Price: à§³<%= auction.currentPrice %></p>

                        <div class="flex gap-2">
                            <a href="/api/auction/<%= auction.id %>" class="flex-1 bg-gray-700 text-white text-center py-2 rounded hover:bg-gray-600 transition border border-gray-600">
                                View & Bid
                            </a>

                            <% if (user && (user.role === 'admin' || user.id === auction.UserId)) { %>
                                <form action="/api/auction/delete/<%= auction.id %>" method="POST" onsubmit="return confirm('Delete this auction?');">
                                    <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 transition">
                                        ðŸ—‘
                                    </button>
                                </form>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

</body>
</html>